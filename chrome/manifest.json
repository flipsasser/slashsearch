{
  "name": "SlashSearch",
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["stylesheets/slashsearch.css"],
      "js": ["javascripts/slashsearch.js"],
      "run_at": "document_start"
    }
  ],
  "description": "Press the forward slash key to automatically focus on the search box for whatever website you're on!",
  "icon": "images/icon-128.png",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2,
  "offline_enabled": true,
  "omnibox": {
    "keyword": "\\"
  },
  "options_page": "options.html",
  "permissions": ["tabs"],
  "version": "1.1.5"
}
